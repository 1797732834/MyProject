<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tx_toutiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="头条"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/tx_guonei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="国内"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/tx_guoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="国际"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/tx_shehui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="社会"
            android:textSize="20sp"
            />
        <TextView
        android:id="@+id/tx_tiyu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="体育"
        android:textSize="20sp"
        />
        <TextView
            android:id="@+id/tx_keji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="科技"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/tx_yule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="娱乐"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/tx_junshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="军事"
            android:textSize="20sp"
            />
    </LinearLayout>
    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>
