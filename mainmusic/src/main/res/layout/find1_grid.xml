<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/find_textView1"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:text="丝绸之路上的古典乐大师"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/find_imageView1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#000000"
        android:src="@mipmap/lyric_poster_default_bg4_small" />

    <TextView
        android:id="@+id/find_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/find_textView1"
        android:layout_below="@+id/find_textView1"
        android:layout_marginTop="10dp"
        android:text="经典老唱片"
        android:textColor="#6C6C6C" />

    <TextView
        android:id="@+id/find_textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/find_textView2"
        android:layout_alignBottom="@+id/find_textView2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/find_textView2"
        android:text="阅读"
        android:textColor="#6C6C6C" />

    <TextView
        android:id="@+id/find_textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/find_textView3"
        android:layout_alignBottom="@+id/find_textView3"
        android:layout_centerHorizontal="true"
        android:text="1.9万"
        android:textColor="#6C6C6C" />

</RelativeLayout>