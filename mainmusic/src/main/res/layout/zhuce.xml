<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >
        <ImageView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:background="@mipmap/logbb" />

        <EditText
            android:id="@+id/edit_username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="请输入注册的QQ号/手机号/邮箱" />
        <EditText 
            android:id="@+id/edit_password1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="请输入注册密码"
            />
        <EditText 
            android:id="@+id/edit_password2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="请再次输入密码/两次密码相同"
            />
        
        <ImageButton 
            android:layout_marginTop="20dp"
            android:id="@+id/zhuce_ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/tjzc"
            android:background="#ffffff"
            />
    </LinearLayout>

</LinearLayout>